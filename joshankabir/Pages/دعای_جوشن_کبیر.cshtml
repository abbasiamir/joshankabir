                      hilight("2-8");
                  }
                  else if(time>=210&&time<214){
                      removehighlight("2-8");
                      hilight("2-9");
                  }
                  else if(time>=214&&time<218){
                      removehighlight("2-9");
                      hilight("2-10");
                  }
                  else if(time>=218&&time<222){
                      removehighlight("2-10");
                     removebold("2");
                  }
              }
              else if(time>=233&&time<283){
                  if(time>=233&&time<236){
                      go("3");
                      hilight("3-1");
                  }
                  else if(time>=236&&time<240){
                      hilight("3-2");
                      removehighlight("3-1");
