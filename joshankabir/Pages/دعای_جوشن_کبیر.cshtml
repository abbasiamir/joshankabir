                   else if(time>=255&&time<258){
                      hilight("3-7");
                      removehighlight("3-6");
                  }
                  else if(time>=258&&time<261){
                      hilight("3-8");
                      removehighlight("3-7");
                  }
                  else if(time>=261&&time<264){
                      hilight("3-9");
                      removehighlight("3-8");
                  }
                  else if(time>=264&&time<268){
                      hilight("3-10");
                      removehighlight("3-9");
                  }
                  else if(time>=268&&time<283){
                     removebold("3");
                      removehighlight("3-10");
                  }
              }
              
           },1000);
          function hilight(cls){
               $("."+cls).css("text-shadow","0px 0px 5px yellow,0px 0px 10px yellow,0px 0px 15px yellow,0px 0px 20px yellow,0px 0px 25px yellow");
              // $(".ar ."+class).css("text-shadow","0px 0px 5px yellow,0px 0px 10px yellow,0px 0px 15px yellow,0px 0px 20px yellow,0px 0px 25px yellow");
           };
           function removehighlight(cls){
               $(".ar ."+cls).css("text-shadow","0px 0px 5px darkred,0px 0px 10px darkred,0px 0px 15px darkred,0px 0px 20px darkred");
               $(".fa ."+cls).css("text-shadow","0px 0px 5px darkgreen,0px 0px 10px darkgreen,0px 0px 15px darkgreen,0px 0px 20px darkgreen");
           };
           function removebold(id){
               var element= document.getElementById(id);
               element.style.backgroundColor="";
           };
        function go(id){
            $("#"+id).css("scroll-margin","55px");
            var element= document.getElementById(id);
           element.scrollIntoView({ 
                    behavior: 'smooth' ,block:"start"});
           
            bold(id);     
        }
        function bold(id){
           
             $("#"+id).css("background","rgba(0,0,100,.5)");
             
        };
        function fontsizechangedar(size){
           
           $(".ar").css("font-size",size);
        };
        function fontsizechangedfa(size){
           
           $(".fa").css("font-size",size);
        };
         function fontarchanged(font){
            if(font=="نسخ"){
               font="Arial";
             }
           $(".ar").css("font-family",font);
        };
         function fontfachanged(font){
             if(font=="نسخ"){
               font="Arial";
             }
          
           $(".fa").css("font-family",font);
        };
       
</script>