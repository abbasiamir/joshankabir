                     hilight("1-2");
                  }
                  else if(time>="139"&&time<"142"){
                     removehighlight("1-2");
                     hilight("1-3");
                  }
                   else if(time>="142"&&time<"144"){
                     removehighlight("1-3");
                     hilight("1-4");
                  }
                   else if(time>="144"&&time<"147"){
                     removehighlight("1-4");
                     hilight("1-5");
                  } else if(time>="147"&&time<"150"){
                     removehighlight("1-5");
                     hilight("1-6");
                  }
                  else if(time>="150"&&time<"152"){
                     removehighlight("1-6");
                     hilight("1-7");
                  }
                  else if(time>="152"&&time<"155"){
                     removehighlight("1-7");
                     hilight("1-8");
                  }
                  else if(time>="155"&&time<"158"){
                     removehighlight("1-8");
                     hilight("1-9");
