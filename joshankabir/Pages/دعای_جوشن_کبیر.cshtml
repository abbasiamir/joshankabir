<script>
           setInterval(()=>{
               var audio=document.getElementsByTagName("audio")[0];
               var time= audio.currentTime;
               if(time>="0"&&time<"1"){
                   audio.currentTime="233";
               }
              if(time>"100" && time<"108"){
                 go("00");
                
              }
              else if(time>"108"&&time<"128"){
                 removebold("00");
                  go("01");
                 
              }
              else if(time>="128"&&time<="178"){
                 
                  if(time>="128"&&time<"136"){
                      removebold("01");
                      go("1");
                      hilight("1-1");
                  }
                  else if(time>="136"&&time<"139"){
